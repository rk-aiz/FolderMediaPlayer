<Application x:Class="FolderMediaPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FolderMediaPlayer"
             xmlns:prop="clr-namespace:FolderMediaPlayer.Properties"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Locales/en-US.xaml"/>
                <ResourceDictionary Source="Themes/default.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <prop:Resources x:Key="resources"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
